<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#81C748" />
            <gradient android:angle="-90" android:startColor="#81C748" android:endColor="#4CAF50"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#81C748" />
            <solid android:color="#81C784"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#81C748" />
            <gradient android:angle="-90" android:startColor="#81C748" android:endColor="@color/green" />
        </shape>
    </item>
</selector>